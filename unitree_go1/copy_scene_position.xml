<mujoco model="go1 scene">
  <!-- robot -->
  <include file="go1_position.xml"/>

  <!-- statistiche e vista -->
  <statistic center="0 0 0.1" extent="0.8"/>
  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <!-- heightmap esterna: attenzione al nuovo attributo size -->
    <hfield
      name="terrain"
      file="terrain.png"
      nrow="512"
      ncol="512"
      size="10 10 3 0.1"/>
  </asset>

  <worldbody>
    <!-- terreno irregolare basato sulla PNG -->
    <geom
      name="mountain"
      type="hfield"
      hfield="terrain"
      size="10 10 3"
      material="default"/>
    <!-- luce distante -->
    <light pos="0 0 3" dir="0 -1 -0.5" directional="true"/>
  </worldbody>
</mujoco>